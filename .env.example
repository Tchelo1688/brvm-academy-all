# ===========================================
# BRVM Academy - Variables d'environnement
# ===========================================
# Copiez ce fichier : cp .env.example .env
# Puis remplissez vos propres valeurs

# --- Serveur ---
PORT=5000
NODE_ENV=development

# --- MongoDB ---
# Option 1 : MongoDB local
MONGODB_URI=mongodb://localhost:27017/brvm-academy
# Option 2 : MongoDB Atlas (gratuit) — créez un compte sur mongodb.com/atlas
# MONGODB_URI=mongodb+srv://VOTRE_USER:VOTRE_PASSWORD@cluster0.xxxxx.mongodb.net/brvm-academy

# --- JWT (Authentification) ---
# Générez une clé secrète : node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=votre_cle_secrete_ici
JWT_EXPIRE=30d

# --- Cloudinary (Hébergement vidéos & images) ---
# Créez un compte gratuit sur cloudinary.com
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# --- Email (Notifications) ---
# Utilisez Gmail ou un service SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASS=votre_mot_de_passe_application

# --- Paiement Mobile (Phase 2) ---
# CinetPay — créez un compte sur cinetpay.com
CINETPAY_API_KEY=
CINETPAY_SITE_ID=
# Wave — créez un compte sur wave.com/developers
WAVE_API_KEY=

# --- Frontend URL ---
CLIENT_URL=http://localhost:5173
